{
  "info": {
    "name": "Fitflix Gym Media",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" },
    { "key": "gymId", "value": "123" }
  ],
  "item": [
    {
      "name": "Upload Photos & Videos",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "multipart/form-data" }],
        "url": {
          "raw": "{{base_url}}/gyms/{{gymId}}/media",
          "host": ["{{base_url}}"],
          "path": ["gyms", "{{gymId}}", "media"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "type",
              "value": "photos",
              "type": "text"
            },
            {
              "key": "media",
              "type": "file",
              "src": []
            },
            {
              "key": "media",
              "type": "file",
              "src": []
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "List Photos",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/gyms/{{gymId}}/media?type=photos",
          "host": ["{{base_url}}"],
          "path": ["gyms", "{{gymId}}", "media"],
          "query": [{ "key": "type", "value": "photos" }]
        }
      },
      "response": []
    },
    {
      "name": "List Videos",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/gyms/{{gymId}}/media?type=videos",
          "host": ["{{base_url}}"],
          "path": ["gyms", "{{gymId}}", "media"],
          "query": [{ "key": "type", "value": "videos" }]
        }
      },
      "response": []
    },
    {
      "name": "Delete Media",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/gyms/{{gymId}}/media",
          "host": ["{{base_url}}"],
          "path": ["gyms", "{{gymId}}", "media"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"gym_123/photos/1612345678_sample.jpg\"\n}"
        }
      },
      "response": []
    }
  ]
}
