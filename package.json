{
  "name": "fitflix-backend",
  "version": "0.1.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "build": "prisma generate && prisma migrate deploy",
    "build:render": "npm install && prisma generate && prisma migrate deploy",
    "build:full": "npm ci && prisma generate && prisma migrate deploy",
    "postbuild": "echo 'Build completed successfully!'",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --detectOpenHandles",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --runInBand --detectOpenHandles --forceExit",
    "test:security": "node scripts/test-security.js",
    "test:security:local": "node scripts/test-security.js http://localhost:3000",
    "test:security:prod": "node scripts/test-security.js https://fitflix-backend-avxt.onrender.com",
    "verify:deployment": "node scripts/verify-deployment.js",
    "verify:deployment:prod": "node scripts/verify-deployment.js https://fitflix-backend-avxt.onrender.com",
    "db:dev:migrate": "cross-env NODE_ENV=development npx prisma migrate dev",
    "db:dev:seed": "cross-env NODE_ENV=development npx prisma db seed",
    "db:seed:admin": "node prisma/seed-admin.js",
    "db:test:migrate": "cross-env NODE_ENV=test npx prisma migrate deploy",
    "db:test:reset": "cross-env NODE_ENV=test npx prisma migrate reset --force",
    "db:generate": "npx prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:seed:prod": "NODE_ENV=production node prisma/seed-admin.js",
    "db:seed:events": "node prisma/seed-events.js",
    "db:update:event-date": "node prisma/update-event-date.js"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "supertest": "^6.3.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  }
}
