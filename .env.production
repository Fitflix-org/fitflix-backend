# .env (or .env.production)
# Configuration for the production environment

DATABASE_URL="your_production_database_url" # VERY IMPORTANT: Use your actual production DB URL
PORT=5000 # Or 80/443 if behind a proxy
JWT_SECRET="YOUR_ULTRA_STRONG_PRODUCTION_JWT_SECRET" # VERY IMPORTANT: Use a strong, unique, truly secret key
JWT_EXPIRES_IN="7d" # Example: 7 days for production tokens
NODE_ENV="production"

# AWS S3 (your production AWS credentials)
AWS_ACCESS_KEY_ID="YOUR_PRODUCTION_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_PRODUCTION_AWS_SECRET_ACCESS_KEY"
AWS_REGION="ap-south-1"
BUCKET_NAME="saguun-project-prod" # Your production bucket

# Twilio (your production Twilio credentials)
TWILIO_ACCOUNT_SID="YOUR_PRODUCTION_TWILIO_ACCOUNT_SID"
TWILIO_AUTH_TOKEN="YOUR_PRODUCTION_TWILIO_AUTH_TOKEN"
TWILIO_PHONE_NUMBER="YOUR_PRODUCTION_TWILIO_PHONE_NUMBER"

FRONTEND_URL="https://your-production-frontend.com" # Your production frontend URL